{
	"format_version": "1.16.100",
	"minecraft:item": {
		"description": {
			"identifier": "exdrill:crumbled_hammer"
		},
		"components": {
			"minecraft:damage": 6,
			"minecraft:weapon": {
				"on_hurt_entity": {
					"event": "exdrill:on_hurt_entity",
