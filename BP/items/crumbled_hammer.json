			},
			"minecraft:hand_equipped": true
		},
		"events": {
			"exdrill:on_hurt_entity": {
				"sequence": [
					{
						"condition": "query.scoreboard('abrupt_hammer') == 4",
						"damage": {
							"amount": 4,
							"target": "other",
							"type": "entity_attack"
						},
						"run_command": {
							"command": [
								"scoreboard players set @s abrupt_hammer 0",
								"particle exdrill:large_crumbled_rock_particle ^ ^1 ^2",
								"playsound mob.zombie.woodbreak @a ~ ~ ~"
							],
							"target": "self"
						}
					},
					{
						"condition": "query.scoreboard('abrupt_hammer') != 4",
						"run_command": {
							"command": [
								"scoreboard players add @s abrupt_hammer 1",
								"particle exdrill:small_crumbled_rock_particle ^ ^1 ^2",
								"playsound break.tuff @a ~ ~ ~"
							],
							"target": "self"
						}
					},
					{
						"condition": "query.scoreboard('abrupt_hammer') != 4",
						"damage": {
							"amount": 1,
							"target": "self",
							"type": "all"
						}
					},
					{
						"condition": "query.scoreboard('abrupt_hammer') == 4",
						"damage": {
							"amount": 3,
							"target": "self",
							"type": "all"
						}
					}
				]
			}
		}
	}
