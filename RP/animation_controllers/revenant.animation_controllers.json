{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.revenant": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						"bob",
						"general",
						"look_at_target"
					],
					"transitions": [
						{
							"has_target": "query.has_target"
						}
					]
				},
				"has_target": {
					"animations": [
						"attack",
						"target",
						"look_at_target"
					],
					"transitions": [
						{
							"default": "!query.has_target"
						}
					]
				}
			}
		}
	}
}