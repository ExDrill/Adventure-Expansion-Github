{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.revenant": {
			"initial_state": "idle",
			"states": {
				"default": {
					"animations": [
						"general",
						{
							"move": "query.modified_move_speed * 2"
						},
						"attack"
					],
					"particle_effects": [
						{
							"effect": "soul_flame",
							"locator": "flames0"
						},
						{
							"effect": "soul_flame",
							"locator": "flames1"
						},
						{
							"effect": "soul_flame",
							"locator": "flames2"
						},
						{
							"effect": "soul_flame",
							"locator": "flames3"
						}
					]
				},
				"emerging": {
					"animations": [
						"emerge"
					],
					"transitions": [
						{
							"default": "query.variant == 2"
						}
					]
				},
				"idle": {
					"animations": [
						"grounded"
					],
					"transitions": [
						{
							"emerging": "query.variant == 1"
						},
						{
							"default": "query.variant == 2"
						}
					]
				}
			}
		}
	}
}